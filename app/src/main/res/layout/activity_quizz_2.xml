<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizzRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/cardThirdQuestion"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_margin="64dp"
        android:alpha="0.5"
        android:rotation="5"
        android:elevation="2dp"
        android:translationX="50dp"
        android:translationY="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66">

        <include layout="@layout/fragment_feelings" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cardSecondQuestion"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_margin="64dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66">

        <include
            layout="@layout/fragment_awards" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cardFirstQuestion"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_margin="64dp"
        android:translationX="-500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66">

        <include layout="@layout/first_question" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>